        // --- DB Collection ê²½ë¡œ ---
        const studentCollectionPath = () => collection(db, 'artifacts', appId, 'public', 'data', 'students');
        const bookCollectionPath = () => collection(db, 'artifacts', appId, 'public', 'data', 'books');
        
        // --- [v19] PERMISSION FIX: DB ê²½ë¡œ ìˆ˜ì • ---
        
        // (í•™ìƒ í•™ìŠµì´ë ¥ - 'users' -> 'public/data/studentHistory' ê²½ë¡œë¡œ ë³€ê²½)
        async function fetchReadingHistory(studentId) {
            if (!studentId || !db) return [];
            // [v19] FIX: Permissions error. Changed path from private 'users' to public 'public/data'
            const historyCollectionPath = collection(db, 'artifacts', appId, 'public', 'data', 'studentHistory', studentId, 'readingHistory');
            try {
                const querySnapshot = await getDocs(historyCollectionPath);
                const history = []; querySnapshot.forEach((doc) => history.push(doc.data()));
                currentReadingHistory = history; 
                return history;
            } catch (error) { console.error("Error fetching history: ", error); return []; }
        }
        
        // [v19] PERMISSION FIX: ê²½ë¡œ ìˆ˜ì •
        async function getBookProgress(studentId, bookQuizNumber) {
            if (!studentId || !bookQuizNumber) return null;
            // [v19] FIX: Permissions error. Changed path from private 'users' to public 'public/data'
            const docRef = doc(db, 'artifacts', appId, 'public', 'data', 'studentHistory', studentId, 'readingHistory', bookQuizNumber);
            try { 
                const docSnap = await getDoc(docRef); 
                return docSnap.exists() ? docSnap.data() : null; 
            } 
            catch (error) { console.error("Error getting book progress: ", error); return null; }
        }
        
        // [v19] PERMISSION FIX: ê²½ë¡œ ìˆ˜ì •
        async function updateBookProgress(studentId, book, taskToUpdate) {
            if (!studentId || !book || !taskToUpdate || !db || !book.quizNumber) return;
            // [v19] FIX: Permissions error. Changed path from private 'users' to public 'public/data'
            const bookDocRef = doc(db, 'artifacts', appId, 'public', 'data', 'studentHistory', studentId, 'readingHistory', book.quizNumber);
            
            let currentProgressData = await getBookProgress(studentId, book.quizNumber); 
            
            if (!currentProgressData) {
                const bookInfoToSave = { 
                    quizNumber: book.quizNumber, 
                    title: book.title, 
                    level: book.level 
                };
                currentProgressData = { 
                    ...bookInfoToSave, 
                    status: 'reading', 
                    progress: { audio: false, quiz: false, report: false } 
                };
            }
            
            currentProgressData.progress[taskToUpdate] = true;
            const { audio, quiz, report } = currentProgressData.progress;
            currentProgressData.status = (audio && quiz && report) ? 'completed' : 'reading';
            
            try {
                await setDoc(bookDocRef, currentProgressData);
                const index = currentReadingHistory.findIndex(b => b.quizNumber === book.quizNumber);
                if (index > -1) { 
                    currentReadingHistory[index] = currentProgressData; 
                } else { 
                    currentReadingHistory.push(currentProgressData); 
                }
                return currentProgressData; 
            } catch (error) { console.error("Error updating book progress: ", error); }
        }

        // --- í•™ìƒ/ë„ì„œ ëª©ë¡ DB Fetch í•¨ìˆ˜ ---
        async function fetchStudentsFromDB() {
            appLoadingStatus.textContent = "Loading student list...";
            const querySnapshot = await getDocs(studentCollectionPath());
            const students = [];
            querySnapshot.forEach((doc) => students.push({ id: doc.id, ...doc.data() }));
            studentData = students.sort((a,b) => a.name.localeCompare(b.name)); // ì´ë¦„ìˆœ ì •ë ¬
            return studentData;
        }
        async function fetchBooksFromDB() {
            appLoadingStatus.textContent = "Loading book library... (may take a moment)";
            const querySnapshot = await getDocs(bookCollectionPath());
            const books = [];
            querySnapshot.forEach((doc) => books.push({ quizNumber: doc.id, ...doc.data() }));
            bookData = books;
            return bookData;
        }

        // --- 'ë‚˜ì˜ ì„œì¬' í™”ë©´ ê·¸ë¦¬ê¸° ---
        async function renderMyLibrary() {
            myLibraryList.innerHTML = `<div class="loader col-span-full"></div><p class="col-span-full text-center text-stone-500 text-lg">Loading...</p>`;
            const history = currentReadingHistory;
            myLibraryList.innerHTML = ''; 
            if (history.length === 0) {
                myLibraryList.innerHTML = `<p class="col-span-full text-center text-stone-500 text-lg">ì•„ì§ ì‹œì‘í•œ ì±…ì´ ì—†ìŠµë‹ˆë‹¤.</p>`;
                return;
            }
            history.forEach(book => { myLibraryList.innerHTML += createBookCardHTML(book); });
        }
        myLibraryButton.addEventListener('click', async () => {
            await renderMyLibrary(); 
            libraryScreen.classList.add('hidden');
            myLibraryScreen.classList.remove('hidden');
        });
        backToMainLibraryButton.addEventListener('click', () => {
            myLibraryScreen.classList.add('hidden');
            libraryScreen.classList.remove('hidden');
            renderFilteredLibrary(currentLevelRange, searchInput.value); 
        });

        // --- í•„í„°ë§ëœ ë¼ì´ë¸ŒëŸ¬ë¦¬ ê·¸ë¦¬ê¸° ---
        function renderFilteredLibrary(range, searchQuery) {
            bookList.innerHTML = '';
            searchQuery = searchQuery.toLowerCase();
            let foundBooks = 0;
            const filteredBooks = bookData.filter(book => {
                const level = parseFloat(book.level);
                // [v21] FIX: levelì´ ìœ íš¨í•˜ì§€ ì•Šìœ¼ë©´(e.g. "") í•„í„°ë§
                if (isNaN(level) || !book.title) return false;
                
                const matchesLevel = Math.floor(level) === range;
                const matchesSearch = book.title.toLowerCase().includes(searchQuery);
                return matchesLevel && matchesSearch;
            });
            filteredBooks.forEach(book => {
                bookList.innerHTML += createBookCardHTML(book);
                foundBooks++;
            });
            noBooksFound.classList.toggle('hidden', foundBooks > 0);
        }
        
        // [v16] UI ìˆ˜ì •: ì±… í‘œì§€ ì´ë¯¸ì§€ ì œê±°
        function createBookCardHTML(book) {
            const progressData = currentReadingHistory.find(b => b.quizNumber === book.quizNumber);
            
            let badgeHTML = '';
            if (progressData) {
                if (progressData.status === 'completed') {
                    badgeHTML = `<span class="absolute top-4 right-4 px-2 py-0.5 bg-green-500 text-white text-xs font-bold rounded-full">âœ… Completed</span>`;
                } else {
                    const progressCount = (progressData.progress.audio ? 1:0) + (progressData.progress.quiz ? 1:0) + (progressData.progress.report ? 1:0);
                    badgeHTML = `<span class="absolute top-4 right-4 px-2 py-0.5 bg-yellow-400 text-yellow-900 text-xs font-bold rounded-full">ğŸŒ± ${progressCount}/3</span>`;
                }
            }
            // [v21] FIX: book.titleì´ ì—†ëŠ” ê²½ìš°ë¥¼ ëŒ€ë¹„ (í•˜ì§€ë§Œ í•„í„°ì—ì„œ ê±¸ëŸ¬ì§)
            return `
            <button class="book-card-button w-full bg-white p-4 rounded-xl shadow-md text-left flex items-center gap-4 hover:shadow-lg transition-shadow relative" data-book-quiz="${book.quizNumber}">
                <div class="flex-1 overflow-hidden">
                    <h3 class="text-lg font-bold text-amber-900 truncate">${book.title || 'No Title'}</h3>
                    <p class="text-sm text-stone-500">ATOS Level ${book.level || 'N/A'}</p>
                    <p class="text-sm text-stone-400">Quiz # ${book.quizNumber || 'N/A'}</p>
                </div>
                ${badgeHTML}
            </button>`;
        }
        
        searchInput.addEventListener('input', (e) => {
            renderFilteredLibrary(currentLevelRange, e.target.value);
        });

        // --- ë ˆë²¨ ì„ íƒ í™”ë©´ ê·¸ë¦¬ê¸° ---
        function renderLevelSelectionScreen() {
            levelGrid.innerHTML = '';
            levelWelcomeTitle.textContent = `Welcome, ${currentStudent.name}!`;
            const levelRanges = new Set(bookData.map(book => {
                // [v21] FIX: levelì´ ìœ íš¨í•˜ì§€ ì•Šìœ¼ë©´(e.g. "") NaNì´ ë¨
                const level = parseFloat(book.level);
                return isNaN(level) ? null : Math.floor(level);
            }).filter(level => level !== null)); // null (NaN) ì œê±°
            
            const sortedRanges = [...levelRanges].sort((a, b) => a - b);
            
            sortedRanges.forEach(range => {
                const button = document.createElement('button');
                button.className = "level-button bg-white p-6 rounded-xl shadow-md text-center hover:shadow-lg hover:bg-amber-50 transition-all transform hover:-translate-y-1";
                let iconName = `filter_${range}`;
                if(range < 0 || range > 9) iconName = 'filter_9_plus';
                button.innerHTML = `
                    <span class="material-symbols-outlined text-5xl text-amber-600">${iconName}</span>
                    <span class="block text-2xl font-semibold text-amber-900 mt-3">${range}.x Level</span>
                    <span class="block text-stone-500">(${range}ì ëŒ€)</span>
                `;
                button.dataset.levelRange = range;
                button.addEventListener('click', () => handleLevelSelect(range));
                levelGrid.appendChild(button);
            });
        }
        
        // --- í™”ë©´ ì „í™˜ ë¡œì§ ---
        async function handleStudentSelect(studentId) {
            currentStudent = studentData.find(s => s.id === studentId);
            if (!currentStudent) return;
            appLoadingScreen.classList.remove('hidden');
            appLoadingStatus.textContent = `Loading ${currentStudent.name}'s library...`;
            await fetchReadingHistory(currentStudent.id); 
            renderLevelSelectionScreen();
            studentScreen.classList.add('hidden');
            levelScreen.classList.remove('hidden');
            appLoadingScreen.classList.add('hidden');
        }
        function handleLevelSelect(range) {
            currentLevelRange = range;
            libraryTitle.textContent = `${range}.x Level Books`;
            searchInput.value = '';
            renderFilteredLibrary(range, ""); 
            levelScreen.classList.add('hidden');
            libraryScreen.classList.remove('hidden');
        }
        function logout() {
            currentStudent = null; currentLevelRange = null; currentReadingHistory = [];
            libraryScreen.classList.add('hidden');
            levelScreen.classList.add('hidden');
            myLibraryScreen.classList.add('hidden'); 
            adminPanelScreen.classList.add('hidden');
            studentScreen.classList.remove('hidden');
        }
        logoutButtonLevel.addEventListener('click', logout);
        backToLevelSelectButton.addEventListener('click', () => {
            libraryScreen.classList.add('hidden');
            levelScreen.classList.remove('hidden');
        });
        
        // --- ê´€ë¦¬ì ëª¨ë“œ ë²„íŠ¼ ì´ë²¤íŠ¸ ---
        adminModeButton.addEventListener('click', () => {
            studentScreen.classList.add('hidden');
            adminPanelScreen.classList.remove('hidden');
            renderAdminStudentList(); // ê´€ë¦¬ì íŒ¨ë„ ì²« ë¡œë“œ
            setActiveTab('manage-students');
        });
        adminBackButton.addEventListener('click', logout);

        // --- ëª¨ë‹¬ ë° ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ ---
        bookList.addEventListener('click', function(event) {
            const bookButton = event.target.closest('.book-card-button');
            if (bookButton) {
                const quizNum = bookButton.dataset.bookQuiz;
                const book = bookData.find(b => b.quizNumber === quizNum);
                showBookDetailsModal(book);
            }
        });
        myLibraryList.addEventListener('click', function(event) {
            const bookButton = event.target.closest('.book-card-button');
            if (bookButton) {
                const quizNum = bookButton.dataset.bookQuiz;
                const book = currentReadingHistory.find(b => b.quizNumber === quizNum);
                if (book) showBookDetailsModal(book);
            }
        });
        
        async function showBookDetailsModal(book) {
            if (!book) return;
            currentOpenBook = book; 
            const googleDriveSearchUrl = `https://drive.google.com/drive/search?q=${encodeURIComponent(book.title)}`;
            
            document.getElementById('modal-book-title').textContent = book.title;
            document.getElementById('modal-book-level').textContent = `ATOS Level ${book.level} | Quiz # ${book.quizNumber || 'N/A'}`;
            
            document.getElementById('modal-audio-button').href = googleDriveSearchUrl;
            document.getElementById('modal-dict-button').href = config.dictionaryUrl;
            
            const progressData = await getBookProgress(currentStudent.id, book.quizNumber); 
            document.getElementById('progress-audio').checked = progressData?.progress?.audio || false;
            document.getElementById('progress-quiz').checked = progressData?.progress?.quiz || false;
            document.getElementById('progress-report').checked = progressData?.progress?.report || false;
            showModal(bookModal, bookModalContent);
        }
        
        function showLoginHelperModal() {
            if (!currentStudent) return;
            document.getElementById('modal-student-name').textContent = `Login info for ${currentStudent.name}:`;
            document.getElementById('modal-student-login').value = currentStudent.login;
            document.getElementById('modal-student-pass').value = currentStudent.pass;
            document.getElementById('go-to-quiz-site').href = config.quizProgramUrl;
            copyFeedback.textContent = '';
            showModal(loginModal, loginModalContent);
        }
        function showTemplateModal() {
            if (!currentOpenBook) return;
            templateListContainer.innerHTML = ''; 
            config.bookReportTemplates.forEach(template => {
                const templateButton = document.createElement('a');
                templateButton.href = template.url; templateButton.target = "_blank"; 
                templateButton.className = "template-button block w-full text-center p-4 bg-orange-500 text-white rounded-lg shadow-md hover:bg-orange-600 transition-colors font-semibold flex items-center justify-center gap-2";
                templateButton.innerHTML = `<span class="material-symbols-outlined">description</span> ${template.name}`;
                templateButton.addEventListener('click', async () => {
                    await updateBookProgress(currentStudent.id, currentOpenBook, 'report');
                    hideModal(templateModal, templateModalContent); 
                });
                templateListContainer.appendChild(templateButton);
            });
            showModal(templateModal, templateModalContent);
        }
        function showModal(modal, content) {
            modal.classList.remove('hidden');
            setTimeout(() => { modal.classList.add('opacity-100'); content.classList.remove('scale-95'); content.classList.add('scale-100'); }, 10);
        }
        function hideModal(modal, content) {
            content.classList.remove('scale-100'); content.classList.add('scale-95');
            modal.classList.remove('opacity-100');
            setTimeout(() => { modal.classList.add('hidden'); }, 200);
        }
        closeBookModalButton.addEventListener('click', () => hideModal(bookModal, bookModalContent));
        bookModal.addEventListener('click', (e) => { if (e.target === bookModal) hideModal(bookModal, bookModalContent); });
        
        document.getElementById('modal-audio-button').addEventListener('click', async () => {
            await updateBookProgress(currentStudent.id, currentOpenBook, 'audio');
            document.getElementById('progress-audio').checked = true;
        });
        document.getElementById('modal-quiz-button').addEventListener('click', async () => {
            await updateBookProgress(currentStudent.id, currentOpenBook, 'quiz');
            document.getElementById('progress-quiz').checked = true;
            const quizNum = currentOpenBook.quizNumber;
            const urlTemplate = config.quizSearchUrlTemplate;
            if (quizNum && urlTemplate && urlTemplate.includes("QUIZ_NUMBER_HERE")) {
                window.open(urlTemplate.replace("QUIZ_NUMBER_HERE", encodeURIComponent(quizNum)), '_blank');
            } else {
                window.open(config.quizProgramUrl, '_blank');
            }
            hideModal(bookModal, bookModalContent);
            setTimeout(showLoginHelperModal, 210); 
        });
        document.getElementById('modal-report-button').addEventListener('click', () => {
            hideModal(bookModal, bookModalContent);
            setTimeout(showTemplateModal, 210); 
        });
        closeTemplateModalButton.addEventListener('click', () => hideModal(templateModal, templateModalContent));
        templateModal.addEventListener('click', (e) => { if (e.target === templateModal) hideModal(templateModal, templateModalContent); });
        closeLoginModalButton.addEventListener('click', () => hideModal(loginModal, loginModalContent));
        loginModal.addEventListener('click', (e) => { if (e.target === loginModal) hideModal(loginModal, loginModalContent); });
        
        function copyLoginHelper(text) {
            const ta = document.createElement('textarea');
            ta.value = text; ta.style.position = 'absolute'; ta.style.left = '-9999px';
            document.body.appendChild(ta); ta.select();
            try { document.execCommand('copy'); copyFeedback.textContent = `Copied!`; } 
            catch (err) { copyFeedback.textContent = 'Copy failed.'; }
            document.body.removeChild(ta);
            setTimeout(() => { copyFeedback.textContent = ''; }, 2000);
        }
        document.querySelectorAll('.copy-button').forEach(button => {
            button.addEventListener('click', (e) => {
                const targetId = e.target.closest('[data-target]').dataset.target;
                const textToCopy = document.getElementById(targetId).value;
                copyLoginHelper(textToCopy);
            });
        });

        // --- í•™ìƒ ì„ íƒ í™”ë©´ ê·¸ë¦¬ê¸° ---
        function renderStudentSelection() {
            studentGrid.innerHTML = '';
            studentData.forEach(student => {
                const button = document.createElement('button');
                button.className = "student-button bg-white p-6 rounded-xl shadow-md text-center hover:shadow-lg hover:bg-amber-50 transition-all transform hover:-translate-y-1";
                button.innerHTML = `
                    <span class="material-symbols-outlined text-5xl text-amber-600">account_circle</span>
                    <span class="block text-xl font-semibold text-amber-900 mt-3">${student.name}</span>
                `;
                button.dataset.studentId = student.id;
                button.addEventListener('click', () => handleStudentSelect(student.id));
                studentGrid.appendChild(button);
            });
        }
        
        // --- Admin Panel íƒ­ ë¡œì§ ---
        function setActiveTab(tabId) {
            adminTabs.forEach(tab => tab.classList.remove('active'));
            adminTabContents.forEach(content => content.classList.add('hidden'));
            
            document.getElementById(`tab-${tabId}`).classList.add('active');
            document.getElementById(`admin-panel-${tabId}`).classList.remove('hidden');
            
            if(tabId === 'manage-students') renderAdminStudentList();
            if(tabId === 'manage-books') renderAdminBookList();
        }
        adminTabs.forEach(tab => {
            tab.addEventListener('click', (e) => setActiveTab(e.target.id.replace('tab-', '')));
        });
        
        // --- Admin Panel: í•™ìƒ/ë„ì„œ ëª©ë¡ ë Œë”ë§ ---
        async function renderAdminStudentList() {
            adminStudentListContainer.innerHTML = `<div class="loader"></div>`;
            await fetchStudentsFromDB(); // studentDataê°€ ìµœì‹ í™”ë¨
            adminStudentListContainer.innerHTML = '';
            if (studentData.length === 0) {
                adminStudentListContainer.innerHTML = `<p class="text-center text-stone-500">No students found. Use 'Bulk Import' or 'Add Student'.</p>`;
                return;
            }
            studentData.forEach(student => {
                adminStudentListContainer.innerHTML += `
                <div class="admin-list-item">
                    <div>
                        <p class="title">${student.name} (ID: ${student.id})</p>
                        <p class="detail">Login: ${student.login} / Pass: ${student.pass}</p>
                    </div>
                    <button class="admin-edit-student-button p-2 bg-stone-200 text-stone-700 rounded-lg hover:bg-stone-300" data-student-id="${student.id}">
                        <span class="material-symbols-outlined">edit</span>
                    </button>
                </div>`;
            });
            document.querySelectorAll('.admin-edit-student-button').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const studentId = e.currentTarget.dataset.studentId;
                    const student = studentData.find(s => s.id === studentId);
                    showStudentForm(student);
                });
            });
        }
        async function renderAdminBookList() {
            adminBookListContainer.innerHTML = `<div class="loader"></div>`;
            await fetchBooksFromDB(); // bookDataê°€ ìµœì‹ í™”ë¨
            adminBookListContainer.innerHTML = '';
            if (bookData.length === 0) {
                adminBookListContainer.innerHTML = `<p class="text-center text-stone-500">No books found. Use 'Bulk Import' or 'Add Book'.</p>`;
                return;
            }
            // í€´ì¦ˆ ë²ˆí˜¸ ìˆœìœ¼ë¡œ ì •ë ¬ (ìˆ«ìë¡œ)
            bookData.sort((a, b) => (parseInt(a.quizNumber) || 0) - (parseInt(b.quizNumber) || 0));
            bookData.forEach(book => {
                adminBookListContainer.innerHTML += `
                <div class="admin-list-item">
                    <div>
                        <p class="title">${book.title || 'No Title'} (Quiz: ${book.quizNumber})</p>
                        <p class="detail">Level: ${book.level || 'N/A'}</p>
                    </div>
                    <button class="admin-edit-book-button p-2 bg-stone-200 text-stone-700 rounded-lg hover:bg-stone-300" data-book-quiz="${book.quizNumber}">
                        <span class="material-symbols-outlined">edit</span>
                    </button>
                </div>`;
            });
            document.querySelectorAll('.admin-edit-book-button').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const quizNum = e.currentTarget.dataset.bookQuiz;
                    const book = bookData.find(b => b.quizNumber === quizNum);
                    showBookForm(book);
                });
            });
        }

        // --- Admin Panel: í•™ìƒ/ë„ì„œ í¼ ë¡œì§ ---
        addStudentButton.addEventListener('click', () => showStudentForm(null));
        addBookButton.addEventListener('click', () => showBookForm(null));
        closeStudentFormModal.addEventListener('click', () => hideModal(studentFormModal, studentFormModal.querySelector('.modal-content')));
        closeBookFormModal.addEventListener('click', () => hideModal(bookFormModal, bookFormModal.querySelector('.modal-content')));

        function showStudentForm(student) { // nullì´ë©´ 'ì¶”ê°€', ê°ì²´ë©´ 'ìˆ˜ì •'
            studentForm.reset();
            if (student) {
                studentFormTitle.textContent = "Edit Student";
                studentFormIdHidden.value = student.id; // ìˆ˜ì • ì‹œì—” ID ë³€ê²½ ëª»í•˜ê²Œ
                studentFormIdInput.value = student.id;
                studentFormIdInput.readOnly = true;
                studentFormIdInput.classList.add('bg-stone-200');
                document.getElementById('student-form-name').value = student.name;
                document.getElementById('student-form-login').value = student.login;
                document.getElementById('student-form-pass').value = student.pass;
                deleteStudentButton.classList.remove('hidden');
                deleteStudentButton.dataset.studentId = student.id;
            } else {
                studentFormTitle.textContent = "Add New Student";
                studentFormIdHidden.value = '';
                studentFormIdInput.readOnly = false;
                studentFormIdInput.classList.remove('bg-stone-200');
                deleteStudentButton.classList.add('hidden');
            }
            showModal(studentFormModal, studentFormModal.querySelector('.modal-content'));
        }
        
        function showBookForm(book) { // nullì´ë©´ 'ì¶”ê°€', ê°ì²´ë©´ 'ìˆ˜ì •'
            bookForm.reset();
            if (book) {
                bookFormTitle.textContent = "Edit Book";
                bookFormQuizInput.value = book.quizNumber;
                bookFormQuizInput.readOnly = true;
                bookFormQuizInput.classList.add('bg-stone-200');
                document.getElementById('book-form-title').value = book.title;
                document.getElementById('book-form-level').value = book.level;
                deleteBookButton.classList.remove('hidden');
                deleteBookButton.dataset.bookQuiz = book.quizNumber;
            } else {
                bookFormTitle.textContent = "Add New Book";
                bookFormQuizInput.readOnly = false;
                bookFormQuizInput.classList.remove('bg-stone-200');
                deleteBookButton.classList.add('hidden');
            }
            showModal(bookFormModal, bookFormModal.querySelector('.modal-content'));
        }

        // --- Admin Panel: ì €ì¥/ì‚­ì œ ë¡œì§ ---
        studentForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const id = studentFormIdInput.value.trim();
            if (!id) { alert("Student ID is required."); return; }
            const data = {
                name: document.getElementById('student-form-name').value.trim() || "",
                login: document.getElementById('student-form-login').value.trim() || "",
                pass: document.getElementById('student-form-pass').value.trim() || "",
            };
            try {
                await setDoc(doc(studentCollectionPath(), id), data);
                hideModal(studentFormModal, studentFormModal.querySelector('.modal-content'));
                renderAdminStudentList(); // ëª©ë¡ ìƒˆë¡œê³ ì¹¨
            } catch (error) { console.error("Error saving student: ", error); alert("Error saving student."); }
        });
        deleteStudentButton.addEventListener('click', async (e) => {
            const studentId = e.currentTarget.dataset.studentId;
            if (confirm(`Are you sure you want to delete this student (ID: ${studentId})?\nAll their reading history will remain, but they cannot log in.`)) {
                try {
                    await deleteDoc(doc(studentCollectionPath(), studentId));
                    hideModal(studentFormModal, studentFormModal.querySelector('.modal-content'));
                    renderAdminStudentList(); // ëª©ë¡ ìƒˆë¡œê³ ì¹¨
                } catch (error) { console.error("Error deleting student: ", error); alert("Error deleting student."); }
            }
        });
        
        bookForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const quizNumber = bookFormQuizInput.value.trim();
            if (!quizNumber) {
                alert("Quiz Number is required as a unique ID."); return;
            }
            const data = {
                title: document.getElementById('book-form-title').value.trim() || "",
                level: document.getElementById('book-form-level').value.trim() || "", 
            };
            try {
                await setDoc(doc(bookCollectionPath(), quizNumber), data);
                hideModal(bookFormModal, bookFormModal.querySelector('.modal-content'));
                renderAdminBookList(); // ëª©ë¡ ìƒˆë¡œê³ ì¹¨
            } catch (error) { console.error("Error saving book: ", error); alert("Error saving book."); }
        });
        deleteBookButton.addEventListener('click', async (e) => {
            const quizNum = e.currentTarget.dataset.bookQuiz;
            if (confirm(`Are you sure you want to delete this book (Quiz: ${quizNum})?`)) {
                try {
                    await deleteDoc(doc(bookCollectionPath(), quizNum));
					hideModal(bookFormModal, bookFormModal.querySelector('.modal-content'));
					renderAdminBookList(); // ëª©ë¡ ìƒˆë¡œê³ ì¹¨
                } catch (error) { console.error("Error deleting book: ", error); alert("Error deleting book."); }
            }
        });
        
        // --- [v21] Admin Panel: ì¼ê´„ ë“±ë¡ ë¡œì§ (FIXED) ---
        function parseTSV(text) {
            const lines = text.trim().split('\n');
            return lines.map(line => line.split('\t').map(cell => cell.trim()));
        }
        
        document.getElementById('bulk-import-student').addEventListener('click', async (e) => {
            const button = e.currentTarget;
            button.disabled = true; button.innerHTML = '<div class="loader !w-6 !h-6 !border-2 mx-auto"></div>';
            bulkImportFeedback.textContent = '';
            
            const inputText = document.getElementById('student-input').value;
            const rows = parseTSV(inputText);
            
            const allParsedStudents = rows.map(row => {
                return { 
                    id: row[0] || "", 
                    name: row[1] || "", 
                    login: row[2] || "", 
                    pass: row[3] || "" 
                };
            });
            
            // [v21] id, name, login, pass ëª¨ë‘ ìˆì–´ì•¼ ìœ íš¨í•¨
            const students = allParsedStudents.filter(student => 
                student.id && student.name && student.login && student.pass
            );
            const skippedCount = allParsedStudents.length - students.length;

            if (students.length === 0) {
                let errorMsg = 'No valid data found to import.';
                if (skippedCount > 0) {
                    errorMsg += ` (${skippedCount} rows were skipped due to missing data.)`;
                }
                bulkImportFeedback.textContent = errorMsg;
                button.disabled = false; button.innerHTML = 'Save Students to DB'; return;
            }
            
            bulkImportFeedback.textContent = `Importing ${students.length} students... 0%`;
            try {
                const batch = writeBatch(db);
                students.forEach((student, index) => {
                    const docRef = doc(studentCollectionPath(), student.id);
                    batch.set(docRef, { name: student.name, login: student.login, pass: student.pass });
                });
                await batch.commit();
                
                await fetchStudentsFromDB(); // ë¡œì»¬ ë°ì´í„° ìƒˆë¡œê³ ì¹¨
                
                let successMsg = `Successfully imported ${students.length} students!`;
                if (skippedCount > 0) {
                    successMsg += ` (${skippedCount} rows were skipped due to missing data.)`;
                }
                bulkImportFeedback.textContent = successMsg;
                document.getElementById('student-input').value = '';
            } catch (error) {
                console.error("Error bulk importing students: ", error);
                bulkImportFeedback.textContent = 'Error during import. Check console.';
            }
            button.disabled = false; button.innerHTML = 'Save Students to DB';
        });

        document.getElementById('bulk-import-book').addEventListener('click', async (e) => {
            const button = e.currentTarget;
            button.disabled = true; button.innerHTML = '<div class="loader !w-6 !h-6 !border-2 mx-auto"></div>';
            bulkImportFeedback.textContent = '';
            
            const inputText = document.getElementById('book-input').value;
            const rows = parseTSV(inputText);
            
            const allParsedBooks = rows.map(row => {
                return { 
                    level: row[0] || "", 
                    title: row[1] || "", 
                    quizNumber: row[2] || "" 
                };
            });
            
            // [v21] í€´ì¦ˆë²ˆí˜¸, ì œëª©, ë ˆë²¨ì´ ëª¨ë‘ ìˆê³ , ë ˆë²¨ì´ 'ìˆ«ì'ë¡œ ë³€í™˜ ê°€ëŠ¥í•œ ê²ƒë§Œ í•„í„°ë§
            const books = allParsedBooks.filter(book => 
                book.quizNumber && 
                book.title && 
                book.level && 
                !isNaN(parseFloat(book.level))
            );
            const skippedCount = allParsedBooks.length - books.length;
            
            if (books.length === 0) {
                let errorMsg = 'No valid data found to import.';
                if (skippedCount > 0) {
                    errorMsg += ` (${skippedCount} rows were skipped due to missing data.)`;
                }
                bulkImportFeedback.textContent = errorMsg;
                button.disabled = false; button.innerHTML = 'Save Books to DB'; return;
            }
            
            bulkImportFeedback.textContent = `Importing ${books.length} books... 0%`;
            try {
                // Firestore batchëŠ” 500ê°œ ì œí•œì´ ìˆìŒ. 500ê°œì”© ë‚˜ëˆ ì„œ ì²˜ë¦¬
                for (let i = 0; i < books.length; i += 499) {
                    const batch = writeBatch(db);
                    const chunk = books.slice(i, i + 499);
                    chunk.forEach((book, index) => {
                        const docRef = doc(bookCollectionPath(), book.quizNumber); // í€´ì¦ˆë²ˆí˜¸ë¥¼ IDë¡œ ì‚¬ìš©
                        batch.set(docRef, { title: book.title, level: book.level });
                    });
                    await batch.commit();
                    bulkImportFeedback.textContent = `Importing ${books.length} books... ${Math.round(((i + chunk.length) / books.length) * 100)}%`;
                }
                
                await fetchBooksFromDB(); // ë¡œì»¬ ë°ì´í„° ìƒˆë¡œê³ ì¹¨
                
                let successMsg = `Successfully imported ${books.length} books!`;
                if (skippedCount > 0) {
                    successMsg += ` (${skippedCount} rows were skipped due to missing data.)`;
                }
                bulkImportFeedback.textContent = successMsg;
                document.getElementById('book-input').value = '';
            } catch (error) {
                console.error("Error bulk importing books: ", error);
                bulkImportFeedback.textContent = 'Error during import. Check console.';
            }
            button.disabled = false; button.innerHTML = 'Save Books to DB';
        });

        // --- Firebase ì´ˆê¸°í™” ë° ì•± ì‹œì‘ ---
        async function initializeAppAndFirebase() {
            try {
                const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
                appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
                const app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                setLogLevel('Debug');
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(auth, __initial_auth_token);
                } else {
                    await signInAnonymously(auth);
                }
                console.log("Firebase initialized and user authenticated.");
                
                await fetchStudentsFromDB();
                await fetchBooksFromDB();
                
                renderStudentSelection();
                appLoadingScreen.classList.add('hidden');
                studentScreen.classList.remove('hidden');

            } catch (error) {
                console.error("Firebase Initialization Error:", error);
                appLoadingStatus.textContent = "Error: Could not connect to the database. Please check the configuration.";
            }
        }
        
        document.addEventListener('DOMContentLoaded', initializeAppAndFirebase);
    </script>
</body>
</html>
