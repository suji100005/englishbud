        const studentCollectionPath = () => collection(db, 'artifacts', appId, 'public', 'data', 'students');
        const bookCollectionPath = () => collection(db, 'artifacts', appId, 'public', 'data', 'books');

        async function fetchReadingHistory(studentId) {
            if (!studentId || !db) return [];
            const historyCollectionPath = collection(db, 'artifacts', appId, 'public', 'data', 'studentHistory', studentId, 'readingHistory');
            try {
                const querySnapshot = await getDocs(historyCollectionPath);
                const history = []; querySnapshot.forEach((d) => history.push(d.data()));
                currentReadingHistory = history;
                return history;
            } catch (error) { console.error('Error fetching history: ', error); return []; }
        }

        async function getBookProgress(studentId, bookQuizNumber) {
            if (!studentId || !bookQuizNumber || !db) return null;
            const docRef = doc(db, 'artifacts', appId, 'public', 'data', 'studentHistory', studentId, 'readingHistory', String(bookQuizNumber));
            try { const docSnap = await getDoc(docRef); return docSnap.exists() ? docSnap.data() : null; } catch (error) { console.error('Error getting book progress: ', error); return null; }
        }

        async function updateBookProgress(studentId, book, taskToUpdate) {
            if (!studentId || !book || !taskToUpdate || !db || !book.quizNumber) return;
            const bookDocRef = doc(db, 'artifacts', appId, 'public', 'data', 'studentHistory', studentId, 'readingHistory', String(book.quizNumber));
            let currentProgressData = await getBookProgress(studentId, book.quizNumber);
            if (!currentProgressData) {
                const bookInfoToSave = { quizNumber: book.quizNumber, title: book.title, level: book.level };
                currentProgressData = { ...bookInfoToSave, status: 'reading', progress: { audio: false, quiz: false, report: false } };
            }
            currentProgressData.progress = currentProgressData.progress || { audio:false, quiz:false, report:false };
            currentProgressData.progress[taskToUpdate] = true;
            const { audio, quiz, report } = currentProgressData.progress;
            currentProgressData.status = (audio && quiz && report) ? 'completed' : 'reading';
            try {
                await setDoc(bookDocRef, currentProgressData);
                const index = currentReadingHistory.findIndex(b => String(b.quizNumber) === String(book.quizNumber));
                if (index > -1) { currentReadingHistory[index] = currentProgressData; } else { currentReadingHistory.push(currentProgressData); }
                return currentProgressData;
            } catch (error) { console.error('Error updating book progress: ', error); }
        }

