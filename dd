    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, getDoc, collection, getDocs, deleteDoc, writeBatch } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        let db = null, auth = null, appId = null;
        let studentData = [];
        let bookData = [];

        const config = {
            quizProgramUrl: "https://global-zone60.renaissance-go.com/welcomeportal/rpna67ed",
            quizSearchUrlTemplate: "https://your-renaissance-site.com/search?q=QUIZ_NUMBER_HERE",
            bookReportTemplates: [
                { name: "기본 독후감 (Basic)", url: "#YOUR_TEMPLATE_1_COPY_LINK" },
                { name: "심화 독후감 (Advanced)", url: "#YOUR_TEMPLATE_2_COPY_LINK" }
            ],
            dictionaryUrl: "https://en.dict.naver.com/"
        };

        // Firebase initialization placeholder - replace with your project's config
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_AUTH_DOMAIN",
            projectId: "YOUR_PROJECT_ID",
            // ... other Firebase config fields as needed
        };
        try {
            const firebaseApp = initializeApp(firebaseConfig);
            auth = getAuth(firebaseApp);
            db = getFirestore(firebaseApp);
            // appId is used in Firestore path; set to your identifier
            appId = "YOUR_APP_ID";
        } catch (err) {
            console.warn('Firebase init failed or placeholders in use:', err);
        }

        let currentStudent = null;
        let currentOpenBook = null;
        let currentLevelRange = null;
        let currentReadingHistory = [];

        const appLoadingScreen = document.getElementById('app-loading-screen');
        const appLoadingStatus = document.getElementById('app-loading-status');
        const studentScreen = document.getElementById('student-selection-screen');
        const studentGrid = document.getElementById('student-grid');
        const adminModeButton = document.getElementById('admin-mode-button');
        const adminPanelScreen = document.getElementById('admin-panel-screen');
        const adminBackButton = document.getElementById('admin-back-button');
        const levelScreen = document.getElementById('level-selection-screen');
        const levelGrid = document.getElementById('level-grid');
        const levelWelcomeTitle = document.getElementById('level-welcome-title');
        const logoutButtonLevel = document.getElementById('logout-button-level');
        const libraryScreen = document.getElementById('library-screen');
        const libraryTitle = document.getElementById('library-title');
        const searchInput = document.getElementById('search-input');
        const bookList = document.getElementById('book-list');
        const noBooksFound = document.getElementById('no-books-found');
        const backToLevelSelectButton = document.getElementById('back-to-level-select');
        const myLibraryScreen = document.getElementById('my-library-screen');
        const myLibraryList = document.getElementById('my-library-list');
        const myLibraryButton = document.getElementById('my-library-button');
        const backToMainLibraryButton = document.getElementById('back-to-main-library');
        const templateModal = document.getElementById('report-template-modal');
        const templateModalContent = document.getElementById('report-template-content');
